<section>
  <div class="uploader-container">
    <h1>Upload CSV File</h1>
    <form id="uploadForm" enctype="multipart/form-data">
      <div class="uploader" id="uploader">
        <input type="file" id="fileInput" name="csvfile" accept=".csv" />
        <label for="fileInput">
          <div class="upload-icon">üìÅ</div>
          <p>Drag & Drop your CSV file here or click to select</p>
        </label>
      </div>
    </form>
    <div class="congrats">
      <p>üéâ Congratulations! Your file has been uploaded successfully. üéâ</p>
      <a href="/list-of-files"><button>View Files</button></a>
    </div>
  </div>
  <script>
    document
      .getElementById("fileInput")
      .addEventListener("change", function () {
        if (this.files.length > 0) {
          uploadFile(this.files[0]);
        }
      });

    document
      .getElementById("uploader")
      .addEventListener("dragover", function (e) {
        e.preventDefault();
        e.stopPropagation();
        this.classList.add("dragging");
      });

    document
      .getElementById("uploader")
      .addEventListener("dragleave", function (e) {
        e.preventDefault();
        e.stopPropagation();
        this.classList.remove("dragging");
      });

    document.getElementById("uploader").addEventListener("drop", function (e) {
      e.preventDefault();
      e.stopPropagation();
      this.classList.remove("dragging");
      let files = e.dataTransfer.files;
      document.getElementById("fileInput").files = files;
      if (files.length > 0) {
        uploadFile(files[0]);
      }
    });

    // Uploading the file
    function uploadFile(file) {
      let formData = new FormData();
      formData.append("csvfile", file);

      fetch("/api/upload", {
        method: "POST",
        body: formData,
      })
        .then((response) => response.json())
        .then((data) => {
          if (data.success) {
            document.querySelector(".congrats").style.display = "block";
          } else {
            alert("File upload failed, Please Upload Valid CSV File.");
          }
        })
        .catch((error) => {
          console.error("Error:", error);
          alert("File upload failed.");
        });
    }
  </script>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      background-color: #333;
      color: #fff;
    }

    .logo {
      font-size: 1.5em;
      font-weight: bold;
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
    }

    nav ul li {
      margin-left: 20px;
    }

    nav ul li a {
      text-decoration: none;
      color: #fff;
      font-size: 1em;
    }

    nav ul li a:hover {
      text-decoration: underline;
    }

    .container {
      padding: 20px;
    }

    .uploader-container {
      text-align: center;
      margin-top: 50px;
    }

    .uploader {
      border: 2px dashed #ccc;
      border-radius: 10px;
      padding: 50px;
      cursor: pointer;
      position: relative;
      transition: border-color 0.3s;
    }

    .uploader.dragging {
      border-color: #333;
    }

    .uploader input[type="file"] {
      display: none;
    }

    .uploader label {
      display: block;
      width: 100%;
      height: 100%;
    }

    .upload-icon {
      font-size: 3em;
      margin-bottom: 10px;
    }

    .congrats {
      display: none;
      margin-top: 20px;
      font-size: 1.2em;
      color: green;
    }

    .congrats a {
      text-decoration: none;
    }

    .congrats button {
      margin-top: 10px;
      padding: 10px 20px;
      font-size: 1em;
      color: #fff;
      background-color: #007bff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .congrats button:hover {
      background-color: #0056b3;
    }
  </style>
</section>
